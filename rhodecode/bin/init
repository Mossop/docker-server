#! /bin/sh

mkdir -p /rhodecode/services

if [ ! -f "/rhodecode/services/vcsserver/vcsserver.ini" ]; then
  install-vcs-service
fi

if [ ! -f "/rhodecode/services/community/rhodecode.ini" ]; then
  install-rc-service
fi

touch /tmp/rhodecode-vcsserver.log
touch /tmp/rhodecode-community.log

cd /rhodecode/services/vcsserver
sudo ./profile/bin/gunicorn -c gunicorn_config.py -u rhodecode --paster vcsserver.ini > /tmp/rhodecode-vcsserver.log &

cd /rhodecode/services/community
sudo ./profile/bin/gunicorn -c gunicorn_config.py -u rhodecode --paster rhodecode.ini > /tmp/rhodecode-community.log &

tail -f /tmp/rhodecode-*.log
