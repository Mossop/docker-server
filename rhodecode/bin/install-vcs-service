#! /bin/sh

TARGET=/rhodecode/services/vcsserver

mkdir -p ${TARGET}
ln -s /rhodecode/cache/vcsserver ${TARGET}/profile

cp ${TARGET}/profile/etc/production.ini ${TARGET}/vcsserver.ini
change-ini-value ${TARGET}/vcsserver.ini "core.binary_dir" '""'
change-ini-value ${TARGET}/vcsserver.ini "proc_name" "rhodecode_vcsserver"
change-ini-value ${TARGET}/vcsserver.ini "workers" "4"

cp /rhodecode/profile/lib/python2.7/site-packages/rccontrol/lib/configs/gunicorn_config.py.tmpl ${TARGET}/gunicorn_config.py

echo ${VCSSERVER_VERSION} > ${TARGET}/.version
